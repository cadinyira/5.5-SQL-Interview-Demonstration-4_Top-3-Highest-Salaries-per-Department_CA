SELECT 
    employee_id,
    employee_name,
    department_id,
    employee_salary
FROM (
    SELECT 
        employee_id,
        employee_name,
        department_id,
        employee_salary,
        ROW_NUMBER() OVER (
            PARTITION BY department_id
            ORDER BY employee_salary DESC
        ) AS salary_rank
    FROM employee_salary
) AS ranked_employees
WHERE salary_rank <= 3
ORDER BY department_id, employee_salary DESC;

